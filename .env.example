# ==========================================
# REQUIRED: Gemini AI
# ==========================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# OPTIONAL: Google Sheets (Order Recording)
# ==========================================
# Create a Google Cloud project and enable Sheets API
# Create a service account and download the JSON key
# Share your spreadsheet with the service account email

# The spreadsheet ID (from the URL)
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Service account credentials (paste the entire JSON as one line)
# Example: {"type":"service_account","project_id":"...","private_key":"..."}
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token"}

# ==========================================
# OPTIONAL: Usage Monitoring & Alerts
# ==========================================
# Get email alerts when daily AI requests exceed threshold
# Get API key from: https://resend.com

# Resend API key for sending email alerts
RESEND_API_KEY=re_your_api_key_here

# Email to send alerts to (defaults to ESCALATION_EMAIL if not set)
ALERT_EMAIL=owner@yourbusiness.com

# Daily AI call threshold before alert is triggered (default: 300)
DAILY_ALERT_THRESHOLD=300

# From email address for alerts (use your verified domain in Resend)
FROM_EMAIL=alerts@yourdomain.com

# Optional: API key to protect /api/stats endpoint
STATS_API_KEY=your_secret_stats_key
